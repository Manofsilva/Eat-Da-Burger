<div class="header-container">
  <img id="hamburger-image" src="../public/assets/img/Burger.jpg" alt="Burger image.">
  <header>Eat-Da-Burger!</header>
</div>

<div class="jumbtron">
  <div class="row mx-2">
    <div class="card border-0 rounded-0 mb-3 mx-4 id="options"">
      <h2 class="card-header text-center">Ready to eat da burgers!</h2>
      <div class="card-body">
        <div class="card-text"> 
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="card border-0 rounded-0 mb-3 mx-4 id="options"">
      <h2 class="card-header text-center">Devoured Burgers!</h2>
      <div class="card-body">
        <div class="card-text">        
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="card border-0 rounded-0 mb-3 mx-4 id="options"">
      <h2 class="card-header text-center">Place An Order</h2>
      <div class="card-body">
        <div class="card-text">
          <form class="create-form">
            <div class="form-group">
              <label for="bu">Burger Name:</label>
              <input type="text" id="bu" name="name">
            </div>
            <button type="submit" class="btn btn-outline-secondary rounded-0 place_order">Place Order</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
