<div class="header-container">
  {{!-- <img id="hamburger-image" src="../Pubic/assets/img/Burger.jpg" alt="Burger image."> --}}
  <header>Eat-Da-Burger!</header>
</div>


<div class="text">
<h3>Burgers waiting to be eaten</h3>
</div>

<br>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<br>

<div class="text">
<h3>Burgers that have been eaten</h3>
</div>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<br>

<div class="text">
<h2>Construct a new Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Type:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input class="inputs" type="radio" name="devoured" value="1" checked> Devoured! <br>
    <input class="inputs" type="radio" name="devoured" value="0"> Uneaten
  </div>

  <button type="submit">Build Burger</button>
</form>
</div>